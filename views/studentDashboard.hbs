                <section id="modalContent">
                    <header id="modalHeader">
                        <h3 id="modalHeaderText"><i class="material-icons profile">person_outline</i>&nbsp;&nbsp;&nbsp;&nbsp;My Profile <i class="material-icons close">close</i></h3>
                    </header>
                    <div id="studentInfo">
                        <div id="nameDiv" class="infoSections">
                            <label for="studentName">Name</label><br>
                            <input value="Mike" type="text" id="studentName" name="studentName" disabled>
