                            <input value="Mike" type="text" id="department" name="department" disabled>
                        </div>
                        <div class="infoSections">
                            <label for="password">Password</label><br>
                            <input value="Mike" type="password" id="studentName" name="password" disabled>
                        </div>
                    </div>
                    <footer id="modalFooter">
                        <button id="editButton">Edit</button>
                        <button id="saveButton">Save</button>
                        <button id="cancelButton">Cancel</button>
