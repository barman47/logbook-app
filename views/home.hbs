<section id="background">
        
</section>
<section>
    <header>
        <h1>Electronic Logbook System for SIWES</h1>
    </header>
    <nav><a href="supervisor/login">Supervisor Login</a></nav>
    <form name="loginForm" method="POST" action="/students/login">
        <p id="formHeader">Student Login</p>
        <div class="inputSections" id="regNoDiv">
            <label for="regNo" >Registration Number</label><br>
            <input type="text" id="regNo" name="regNo" class="inputField" placeholder="Student RegNO" autofocus><br>
            <span id="regNoErrorMessage">Please enter your registration number</span><br>
        </div>

        <div class="inputSections" id="passwordDiv">
            <label for="password" >Password</label><br>
            <input type="password" id="password" name="password" class="inputField" placeholder="Password here"><br>
            <span id="passwordErrorMessage">Please enter your password</span><br>
        </div>
        <button name="loginButton" type="submit">Login</button>
        <p id="registerParagraph">Don't have an e-logbook account? <a href="students/register">Register</a></p>
    </form>
</section>
       